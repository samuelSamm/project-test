<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/webapp/views">
    
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>*/menu</pattern>
        <pattern>*/login*</pattern>
        <pattern>*/message_success*</pattern>
        <pattern>*/forgot-password*</pattern>
    </excludes> 
    
    <decorator name="main" page="main_header.jsp">
        <pattern>/*</pattern>
    </decorator>
	
</decorators>